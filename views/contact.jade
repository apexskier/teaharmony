extends layout

block content
    h2.text-center Send a message to #{to_user}
        if user.name == to_user
            | &nbsp;
            span.label.label-warning you!
        | .

    .jumbotron.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
        form(role="form", method="post", action="#{dir}/contact")
            if about
                input(type="hidden", name="_id", value="#{about.id}")

                p About #{trades[about.value.what]} they #{terms.second[about.value.type]}.

            .form-group
                label.sr-only(for="message") Message body
                textarea.form-control.input-lg(name="message", rows="6", placeholder="Hello... ")

            input#hnypt(type="text");
            input(type="hidden", name="to_user", value="#{to_user}")

            .row
                .col-sm-8.col-sm-offset-2
                    button.btn.btn-primary.btn-lg.btn-block(type="submit") Send

