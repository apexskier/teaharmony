extends layout

block content
    h2.text-center Login to TeaHarmony

    .jumbotron.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
        form#signup(role="form", method="post", action="#{dir}/login")
            .form-group
                label.sr-only(for="username") Username
                input#username.form-control.input-lg(type="text", name="username", placeholder="Username", required="required", autofocus)

            .form-group
                label.sr-only(for="password") Password
                input#password.form-control.input-lg(type="password", name="password", placeholder="Password", required="required")

            .hidden
                input#hnypt(type="text")

            .row
                .col-sm-8.col-sm-offset-2
                    button#login.btn.btn-primary.btn-lg.btn-block(type="submit") Login

                    a.btn.btn-link.btn-block.btn-small(href="#{dir}/") Register
